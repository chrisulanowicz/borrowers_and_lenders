					<% end %>
				<% end %>
				<label for="bor_purpose">Need Money For: </label>
					<input type="text" id="bor_purpose" name="borrower[purpose]" />
			</p>
			<p>
				<% if flash[:bor_errors] %>
					<% if flash[:bor_errors]['description'] %>
						<p class="errors">Description <%= flash[:bor_errors]['description'][0] %></p>
					<% end %>
				<% end %>
				<label for="bor_description">Description: </label>
					<textarea id="bor_description" name="borrower[description]" cols="18" rows="3"></textarea>
			</p>
			<p>
				<input type="hidden" name="borrower[raised]" value="0" />
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
				<input type="submit" value="Register" />
			</p>
		</form>
		<a href="/sessions">Already a borrower?</a>
	</div>
</div>