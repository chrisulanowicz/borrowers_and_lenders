<div id="container">
	<div id="lender">
		<h2>Lender</h2>
		<form action="/lenders" method="post">
			<p>
				<% if flash[:errors] %>
					<% if flash[:errors]['first_name'] %>
						<p class="errors">First name <%= flash[:errors]['first_name'][0] %></p>
					<% end %>
				<% end %>
				<label for="len_first_name">First Name: </label>
					<input type="text" id="len_first_name" name="lender[first_name]" />
			</p>
			<p>
				<% if flash[:errors] %>
					<% if flash[:errors]['last_name'] %>
						<p class="errors">Last name <%= flash[:errors]['last_name'][0] %></p>
					<% end %>
				<% end %>
				<label for="len_last_name">Last Name: </label>
					<input type="text" id="len_last_name" name="lender[last_name]" />
			</p>
			<p>
				<% if flash[:errors] %>
					<% if flash[:errors]['email'] %>
						<p class="errors">Email <%= flash[:errors]['email'][0] %></p>
					<% end %>
				<% end %>
				<label for="len_email">Email: </label>
					<input type="text" id="len_email" name="lender[email]" />
			</p>
			<p>
				<% if flash[:errors] %>
					<% if flash[:errors]['password'] %>
						<p class="errors">Password <%= flash[:errors]['password'][0] %></p>
					<% end %>
				<% end %>
				<label for="len_password">Password: </label>
					<input type="password" id="len_password" name="lender[password]" />
			</p>
			<p>
				<% if flash[:errors] %>
					<% if flash[:errors]['password_confirmation'] %>
						<p class="errors">Confirmation <%= flash[:errors]['password_confirmation'][0] %></p>
					<% end %>
				<% end %>
				<label for="len_password_confirmation">Confirm Password: </label>
					<input type="password" id="len_password_confirmation" name="lender[password_confirmation]" />
			</p>
			<p>
				<% if flash[:errors] %>
					<% if flash[:errors]['money'] %>
						<p class="errors">Amount available <%= flash[:errors]['money'][0] %></p>
					<% end %>
				<% end %>
				<label for="len_money">Amount Available: </label>
					<select id="len_money" name="lender[money]">
						<option></option>
						<option value="100">$100</option>
						<option value="500">$500</option>
						<option value="1000">$1,000</option>
						<option value="5000">$5,000</option>
						<option value="10000">$10,000</option>
						<option value="100000">$100,000</option>
					</select>
			</p>
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
			<input type="submit" value="Register" />
		</form>
		<a href="/sessions">Already a lender?</a>
	</div>
	<div id="borrower">
		<h2>Borrower</h2>
		<form action="borrowers" method="post">
			<p>
				<% if flash[:bor_errors] %>
					<% if flash[:bor_errors]['first_name'] %>
