					<% end %>
				<% end %>
				<label for="bor_first_name">First Name: </label>
					<input type="text" id="bor_first_name" name="borrower[first_name]" />
			</p>
			<p>
				<% if flash[:bor_errors] %>
					<% if flash[:bor_errors]['last_name'] %>
						<p class="errors">Last name <%= flash[:bor_errors]['last_name'][0] %></p>
					<% end %>
				<% end %>
				<label for="bor_last_name">Last Name: </label>
					<input type="text" id="bor_last_name" name="borrower[last_name" />
			</p>
			<p>
