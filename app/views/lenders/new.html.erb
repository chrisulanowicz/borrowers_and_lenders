						<p class="errors">Email <%= flash[:bor_errors]['email'][0] %></p>
					<% end %>
				<% end %>
				<label for="bor_email">Email: </label>
					<input type="text" id="bor_email" name="borrower[email]" />
			</p>
			<p>
				<% if flash[:bor_errors] %>
					<% if flash[:bor_errors]['password'] %>
						<p class="errors">Password <%= flash[:bor_errors]['password'][0] %></p>
					<% end %>
				<% end %>
				<label for="bor_password">Password: </label>
					<input type="password" id="bor_password" name="borrower[password]" />
